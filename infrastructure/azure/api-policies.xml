<policies>
    <inbound>
        <!-- Rate limiting: 20 requests per minute (1200/hour), burst protection -->
        <rate-limit-by-key calls="20" renewal-period="60" counter-key="@(context.Request.IpAddress)" />
        <!-- Secondary limit: 100 requests per 5 minutes (1200/hour sustained) -->
        <rate-limit-by-key calls="100" renewal-period="300" counter-key="@(context.Request.IpAddress + &quot;-5min&quot;)" />
        
        <!-- Set backend service -->
        <set-backend-service backend-id="lex-backend" />
        
        <!-- Add CORS headers for web access -->
        <cors allow-credentials="false">
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
        </cors>
        
        <!-- Add usage headers -->
        <set-header name="X-API-Version" exists-action="override">
            <value>1.0</value>
        </set-header>
        <set-header name="X-Rate-Limit-Minute" exists-action="override">
            <value>20</value>
        </set-header>
        <set-header name="X-Rate-Limit-Hour" exists-action="override">
            <value>1200</value>
        </set-header>
    </inbound>
    
    <backend>
        <base />
    </backend>
    
    <outbound>
        <!-- Add rate limit headers in response -->
        <set-header name="X-Rate-Limit-Remaining-Minute" exists-action="override">
            <value>20</value>
        </set-header>
        <set-header name="X-Rate-Limit-Remaining-Hour" exists-action="override">
            <value>1200</value>
        </set-header>
        
        <!-- Add powered by header -->
        <set-header name="X-Powered-By" exists-action="override">
            <value>Lex API - Incubator for AI</value>
        </set-header>
        
        <base />
    </outbound>
    
    <on-error>
        <!-- Custom error responses for rate limiting -->
        <choose>
            <when condition="@(context.Response.StatusCode == 429)">
                <return-response>
                    <set-status code="429" reason="Too Many Requests" />
                    <set-header name="Retry-After" exists-action="override">
                        <value>3600</value>
                    </set-header>
                    <set-header name="Content-Type" exists-action="override">
                        <value>application/json</value>
                    </set-header>
                    <set-body>@{
                        return new JObject(
                            new JProperty("error", "Rate limit exceeded"),
                            new JProperty("message", "You have exceeded the rate limit of 20 requests per minute or 100 requests per 5 minutes"),
                            new JProperty("retry_after", "60"),
                            new JProperty("documentation", "https://github.com/i-dot-ai/lex")
                        ).ToString();
                    }</set-body>
                </return-response>
            </when>
        </choose>
        <base />
    </on-error>
</policies>